<form action="/login" method="post">
  <fieldset>
    <legend>Login Information</legend>
    <label>
      Username:
      <input type="text" name="username" placeholder="Enter your username" required />
    </label>
<br />
    <label>
      Password:
      <input type="password" name="password" placeholder="Enter your password" required />
    </label>
<br />
    <label>
      <input type="checkbox" id="rememberMe" name="rememberMe" />
      Remember me
    </label>
  </fieldset>

  <a href="{{forgotPasswordUrl}}">Forgot password?</a>

  <button type="submit" class="btn btn-success py-1 ">Login</button>

  <div>
    Don't have an account?
    <a href="{{signUpUrl}}">Sign up</a>
  </div>

  <button data-platform="google" class="btn btn-success mt-1 mb-3">Login with Google</button>
  <button data-platform="facebook" class="btn btn-success mt-1 mx-1 mb-3">Login with Facebook</button>
</form>

<script src="/public/js/login.js"></script>