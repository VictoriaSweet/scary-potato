    <div class='add-plant-container'>
        <h2>
            Add another house plant!
        </h2>
        <form class='new-plant-form'>
            <label for='plant_name'>
                Plant Name:
            </label>
            <br />
            <textarea id='plant_name' name='plant_name' rows='2' cols='30'>
            {{plant_name}}
          </textarea>
            <br />
            <br />
            <label for='edible'>
                Edible:
            </label>
            <br />
            <textarea id='edible' name='edible' rows='1' cols='30'>
            {{edible}}
          </textarea>
            <br />
            <br />
            <label for='poisonous'>
                Poisonous:
            </label>
            <br />
            <textarea id='poisonous' name='poisonous' rows='1' cols='30'>
            {{poisonous}}
          </textarea>
            <br />
            <br />
            <label for='cycle'>
                Life Cycle:
            </label>
            <br />
            <textarea id='cycle' name='cycle' rows='2' cols='30'>
            {{cycle}}
          </textarea>
            <br />
            <br />
            <label for='watering'>
                Watering Regimen:
            </label>
            <br />
            <textarea id='watering' name='watering' rows='1' cols='30'>
            {{watering}}
          </textarea>
            <br />
            <br />
            <label for='sunlight'>
                Sunlight Needs:
            </label>
            <br />
            <textarea id='sunlight' name='sunlight' rows='1' cols='30'>
            {{sunlight}}
          </textarea>
            <br />
            <br />
            <label for='indoor'>
                Indoor plant:
            </label>
            <br />
            <textarea id='indoor' name='indoor' rows='1' cols='30'>
            {{indoor}}
          </textarea>
            <br />
            <br />
            <button type='submit' value='Submit'>
                Submit
            </button>
        </form>
    </div>
</div>
